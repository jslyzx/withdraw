/**index.wxss**/
/* @import "../../src/fonts/yirenhei.wxss"; */
.main {
	background-color: rgba(38, 209, 195, .7);
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	overflow: auto;
}
.head{
	display: block;
	margin: 80rpx auto 0;
	width: 90%;
}
.sum{
	display: block;
	text-align: center;
	font-family: 'zihun167hao-yirenhei';
	color: #fff;
	font-size: 50rpx;
}
.sum .total{
	color: #3d3d3d;
	margin: 0 10rpx;
}
.pic{
	margin: 0 auto;
	width: 90%;
	position: relative;
}
.pic image{
	display: block;
	width: 100%;
	height: 200rpx;
}
.choose{
	font-family: 'zihun167hao-yirenhei';
	color: #fff;
	font-size: 26rpx;
	display: block;
	text-align: center;
	margin-top: 10rpx;
}
.pic .people, .pic .money{
	position: absolute;
	font-family: 'zihun167hao-yirenhei';
	font-size: 28rpx;
	color: #3d3d3d;
}
.pic .people{
	top: 80rpx;
	right: 180rpx;
}
.pic .money{
	top: 118rpx;
	right: 160rpx;
}