/* pages/csj/csj.wxss */
.main {
	background-color: rgba(38, 209, 195, .7);
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	overflow: auto;
}

.wrap {
	width: 74%;
	margin: 50rpx auto 0;
}

.wrap .head {
	width: 100%;
}

.sum {
	display: block;
	text-align: center;
	font-family: 'zihun167hao-yirenhei';
	color: #fff;
	font-size: 50rpx;
}

.sum .total {
	color: #0f362c;
	margin: 0 10rpx;
}

.join {
	display: block;
	margin: 0 auto;
	width: 360rpx;
	height: 70rpx;
	margin-top: 20rpx;
}

.donate-wrap {
	background-image: url('http://118.31.66.218:8080/pic/donate.png');
	height: 400rpx;
	background-repeat: no-repeat;
	background-size: 100% 100%;
	width: 100%;
	margin-top: 20rpx;
	padding-top: 50rpx;
	box-sizing: border-box;
}

.donate-wrap .donate-list {
	width: 100%;
	height: 100%;
	overflow: auto;
}

.donate-list .item {
	background-color: #fff;
	width: 90%;
	height: 40rpx;
	border-radius: 40rpx;
	font-family: '方正兰亭黑_GBK';
	color: #000;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 70rpx;
	line-height: 40rpx;
	font-size: 22rpx;
	padding-left: 16rpx;
	box-sizing: border-box;
	position: relative;
	top: 50rpx;
	padding-right: 6rpx;
}

.item image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	position: relative;
	top: -35rpx;
	left: 28rpx;
}

.fl {
	float: left;
}

.fr {
	float: right;
}

.name {
	margin-left: 50rpx;
}

.mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: #000;
	z-index: 9000;
	opacity: .7;
}
.modalDlg{
	position: fixed;
	z-index: 9999;
	width: 80%;
	top: 45%;
	left: 10%;
}
.modalDlg image{
	width: 100%;
}